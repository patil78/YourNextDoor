    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">

        <% for(let listing of allistings){ %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card col listing-card">
      <img src="<%= listing.image && listing.image.url ? listing.image.url : 'https://media.istockphoto.com/id/1298863783/photo/floating-breakfast-on-infinity-pool-in-luxury-hotel.jpg?s=612x612&w=is&k=20&c=GQWeeBRoANXjQRs9d1f4LcbekzSrJrvrZvhDeGkc6f0=' %>" class="card-img-top"

      alt="Listing image" 
      style=" height:20rem">
      <div class="card-img-overlay">
        
      </div>
      <div class="card-body">
        <p class="card-text">
            <b><%= listing.title %> </b><br>
           &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
        </p>
      </div>
    </div>
    </a>
    <% } %>
    </div>
